extends layout

block main
  form(action="/categories" method="post")
    dl
      dt
        label Enter the title for your new category:
      dd
        input(type="text"
              id="categoryTitle"
              name="categoryTitle"
              placeholder="Category Title"
              value=categoryTitle)

    fieldset.actions
      input(type="submit" value="Save")
      a(href="/categories") Cancel
